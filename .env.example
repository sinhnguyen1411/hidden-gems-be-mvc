APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:change-me

DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3307
DB_DATABASE=hiddengems
DB_USERNAME=root
DB_PASSWORD=your-password

JWT_SECRET=supersecret_change_me
CORS_ALLOWED_ORIGIN=http://localhost
APP_URL=http://localhost:8000

# Feature flags / security
ENABLE_BANK_SIMULATION=1

# Auth security & throttling
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=600
REFRESH_TOKEN_TTL_SECONDS=2592000
REFRESH_BIND_UA=1
REFRESH_BIND_IP=0

# Password reset / email verification
PASSWORD_RESET_TTL_SECONDS=900
EMAIL_VERIFY_TTL_SECONDS=86400

# Logging
LOG_CHANNEL=stdout # stdout|file
LOG_PATH=storage/app.log

# Error tracking
ROLLBAR_ACCESS_TOKEN=
SENTRY_DSN=

# Mail / Email
SENDGRID_API_KEY=
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME=Hidden Gems
FRONTEND_URL=http://localhost:5173


# Contact / deep-link data
CONTACT_EMAIL=support@example.com
CONTACT_ZALO=your-zalo-id-or-link
CONTACT_PHONE=+84123456789

# Security headers
SECURITY_HSTS_MAX_AGE=15552000
SECURITY_HSTS_SUBDOMAINS=1
SECURITY_HSTS_PRELOAD=0
SECURITY_CSP=default-src 'self'; img-src 'self' data: https:; object-src 'none'; base-uri 'self'; frame-ancestors 'none'
SECURITY_PERMISSIONS_POLICY=geolocation=(), microphone=(), camera=()

# CORS extras
CORS_ALLOW_CREDENTIALS=0
CORS_MAX_AGE=86400

# Uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_ALLOWED_EXT=jpg,jpeg,png,gif,webp
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/gif,image/webp
UPLOADS_PATH=
UPLOADS_URL_BASE=

# CSRF
CSRF_ENABLED=0
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-CSRF-Token
CSRF_LIFETIME_SECONDS=7200
CSRF_SECRET=
# Cache / Redis
CACHE_ENABLE_ETAG=1
CACHE_MAX_AGE=60
CACHE_DEBUG_HEADER=1
CACHE_DEBUG_HEADER_KEYS=0
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
BANNERS_CACHE_TTL=60
DASHBOARD_CACHE_TTL=30
ADS_ACTIVE_CACHE_TTL=30
SEARCH_CACHE_TTL=15
